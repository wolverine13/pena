<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8" />
    <title>{% block title %}Welcome!{% endblock %}</title>
    {% block stylesheets %}{% endblock %}
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    {% trans_default_domain "login" %}
    <link rel="stylesheet"
          href="{{ asset('assets/vendor/bootstrap/dist/css/bootstrap.min.css') }}">
</head>
<body>
<style>
    html{width:100%;
    height: 100%;}
    body {width:100%;height: 100%;}
    a {padding:1%;}
</style>
{% block body %}
<nav class="navbar navbar-default">
    <ul class="nav navbar-nav">
        <li class="active">
            <a href="/{{  app.request.getLocale() }}/usr"><p style="display:inline">{% trans %}Home{% endtrans %}</p></a>
        </li>
        <li>
            <a href="/{{  app.request.getLocale() }}/records"><p style="display:inline">{% trans %} Assign Key {% endtrans %}</p></a>
        </li>
        <li>
            <a href="/{{  app.request.getLocale() }}/return-key">{% trans %} Return Key {% endtrans %}</a>
        </li>
        <li>
            <a href="/{{  app.request.getLocale() }}/search">{% trans %} search {% endtrans %}</a>
        </li>
        {% if app.user.role.id < 3 %}
        <li>
            <a href="/{{  app.request.getLocale() }}/user"><p style="display:inline">{% trans %} Admin tools {% endtrans %}</p></a>
        </li>
        {% endif %}
    </ul>
    <a href="/logout" style="float:right">{% trans %} <span class="glyphicon glyphicon-log-out"></span> {% endtrans %}</a>
</nav>

{% endblock %}
{% block javascripts %}{% endblock %}
</body>
</html>
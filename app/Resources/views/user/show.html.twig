{% extends 'base.html.twig' %}

{% block body %}
    <h1>User</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Username</th>
                <td>{{ user.username }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ user.password }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Isactive</th>
                <td>{% if user.isActive %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Role</th>
                <td>{{ user.role.name }}</td>
            </tr>
            <tr>
                <th>Storeid</th>
                <td>{{ user.storeId }}</td>
            </tr>
            <tr>
                <th>Created</th>
                <td>{% if user.created %}{{ user.created|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Createdby</th>
                <td>{{ user.createdBy }}</td>
            </tr>
            <tr>
                <th>Umodby</th>
                <td>{{ user.uModBy }}</td>
            </tr>
            <tr>
                <th>Moddate</th>
                <td>{% if user.modDate %}{{ user.modDate|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('user_index') }}">Back to the list</a>
        </li>
        {% if app.user.role.id == 2  and user.role.id !=1 or app.user.role.id ==1 %}
        <li>

            <a href="{{ path('user_edit', { 'id': user.id }) }}">Edit</a>

        </li>
        {% endif %}
        {% if app.user.role.id == 2  and user.role.id !=1 or app.user.role.id ==1 %}
        <li>

                {{ form_start(delete_form) }}
                    <input type="submit" value="Delete">
                {{ form_end(delete_form) }}
        </li>
        {% endif %}
    </ul>
{% endblock %}
